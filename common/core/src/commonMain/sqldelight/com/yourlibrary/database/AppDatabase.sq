CREATE TABLE FilesInfo (
    id INTEGER NOT NULL,
    dbPath TEXT NOT NULL,
    dbName TEXT NOT NULL
);

insertFileInfo:
INSERT INTO FilesInfo(id, dbPath, dbName)
VALUES(?,? ,? );

removeAllFilesInfo:
DELETE FROM FilesInfo;

removeFileInfo:
DELETE FROM FilesInfo WHERE dbPath =:dbPath;

selectAllFilesInfo:
SELECT *
FROM FilesInfo;